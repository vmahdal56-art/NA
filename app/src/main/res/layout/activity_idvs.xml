<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDENTITY GUARD"
            android:textColor="#D4AF37"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To unlock the Shield, we must verify your soul."
            android:textColor="#888888"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:layout_marginBottom="30dp" />

        <FrameLayout
            android:id="@+id/btnUploadID"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#1A1A1A"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“· SCAN ID / PASSPORT"
                android:textColor="#FFFFFF"
                android:layout_gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnVibeCheck"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#1A1A1A"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¥ 15s VIDEO VIBE CHECK"
                android:textColor="#FFFFFF"
                android:layout_gravity="center" />
        </FrameLayout>

        <Button
            android:id="@+id/btnSubmitVerification"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="SUBMIT TO ORCHARD"
            android:backgroundTint="#D4AF37"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
