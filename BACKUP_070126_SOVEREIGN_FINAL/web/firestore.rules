rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == userId 
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['auraBalance', 'isBoosted', 'founderId']);
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    match /preKeyBundles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /meetups/{meetupId} {
      allow read, create: if request.auth != null;
    }
    match /broadcasts/{broadcastId} {
      allow read, create: if request.auth != null;
      match /messages/{messageId} {
        allow read, create: if request.auth != null;
      }
    }
    match /chats/{chatRoomId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.members;
      match /messages/{messageId} {
        allow write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatRoomId)).data.members;
      }
    }
  }
}
